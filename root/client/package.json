        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "babel-loader": "^8.0.6",
        "clean-webpack-plugin": "^3.0.0",
        "concurrently": "^4.1.2",
        "css-loader": "^3.2.0",
        "eslint": "^6.2.2",
        "file-loader": "^4.2.0",
        "html-webpack-plugin": "^3.2.0",
        "html-webpack-template": "^6.2.0",
        "lodash-webpack-plugin": "^0.11.5",
        "node-sass": "^4.12.0",
        "npm-run-all": "^4.1.5",
        "prettier-eslint": "^9.0.0",
