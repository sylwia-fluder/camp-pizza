{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "linebreak-style": ["error", "unix"],
    "indent": ["error", "tab"],
    "no-console": "error",
    "no-template-curly-in-string": "error",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}